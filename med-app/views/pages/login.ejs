<% include ../partials/header %>

<div class="login-wrap">
    <h1>Willkommen</h1>
    <div class="login-logo">
        <img class="logo-border" src="https://www.techonline.com/img/tmp/logo-placeholder.png">
    </div>
    <div class="form-group">
        <form>
            <div class="login-username login-input">
                <input class="form-control" type="name" name="name" placeholder="Benutzername">
            </div>
            <div class="login-password login-input">
                <input class="form-control" type="password" name="password" placeholder="Passwort">
            </div>
            <div class="loginButton">
                <button class="btn btn-success btn-lg">Login</button>
            </div>
        </form>
    </div>
    <div>
        <p class="notRegistered">
            <a href="/registrieren">Noch nicht registriert? Hier registrieren</a>
        </p>
    </div>
</div>

<% include ../partials/footer %>
